FROM maven:alpine AS build
WORKDIR /app

# Copy the entire multi-module project (not just this module)
COPY .. /app

# Build only this module (skip tests to speed up)
RUN mvn -pl audit-service clean package -DskipTests

FROM eclipse-temurin:21-jre
WORKDIR /app
COPY --from=build /app/target/audit-service-0.0.1-SNAPSHOT.jar app.jar
EXPOSE 8080
ENTRYPOINT ["java","-jar","app.jar"]
